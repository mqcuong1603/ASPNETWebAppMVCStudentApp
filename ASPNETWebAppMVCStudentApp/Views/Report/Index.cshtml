@{
    ViewBag.Title = "Student Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Enrollment Report</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Generate Report</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("GenerateReport", "Report", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="courseId">Select Course:</label>
                @Html.DropDownList("courseId", (SelectList)ViewBag.Courses, "-- Select a Course --", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-download-alt"></i> Generate Excel Report
                </button>
            </div>
        }
    </div>
</div>

<div class="alert alert-info">
    <strong>Instructions:</strong>
    <ul>
        <li>Select a course from the dropdown</li>
        <li>Click "Generate Excel Report"</li>
        <li>The report will download automatically</li>
        <li>Open the Excel file to view all students enrolled in that course</li>
    </ul>
</div>